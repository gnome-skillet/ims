-#  This file is app/views/recipes/index.html.haml
%h1 Recipes 

%table#recipes
  %thead
    %tr
      %th Material 
  %tbody
    - @recipes.each do |recipe|
      %tr
        %td= link_to "#{recipe.material_description}", materials_path{recipe.material_id}
        %td= link_to 'Show', recipe_path(recipe)
        %td= link_to 'Edit', edit_recipe_path(recipe)
        %td= link_to 'Delete', recipe, method: :delete, data: {confirm: 'Are you sure?'}

= link_to 'Add new Recipe', new_recipe_path

